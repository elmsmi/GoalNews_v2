@model GoalNewsV2.Models.NoticiasViewModel

@{
    ViewBag.Title = "Añadir noticia";
}

<div class="jumbotron">

    <h2 style="text-align:center">Añadir noticia</h2>


    @using (Html.BeginForm())
    {
        <div class="container">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-2">Cliente</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.clientID, Model.ListOfClients, new { @class = "form-control selectpicker" , data_live_search = "true", data_placeholder = "selecciona un cliente" })
                        @Html.ValidationMessageFor(model => model.clientID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.noticia.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.noticia.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.noticia.Fecha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.noticia.Noticia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.noticia.Noticia, new { @class = "form-control" , required = "required" })
                        @Html.ValidationMessageFor(model => model.noticia.Noticia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Añadir noticia" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>



